            <h5 class="card-title">
              <i class="{{ iconClass }} me-1"></i>
              {{ category.name }}
            </h5>

            <a href="{{ path('category_show', { slug: category.slug }) }}" class="btn btn-light btn-sm mt-2">
              Voir les cours
            </a>
          </div>
        </div>
      </div>
    {% else %}
      <p>Aucune cat√©gorie disponible.</p>
    {% endfor %}
  </div>
{% endblock %}
