{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
  <h1 class="mb-4">Catégories</h1>

  <div class="row g-4">
    {% for category in categories %}
      <div class="col-md-3">
        <div class="card category-card category-card--{{ category.slug }}">
          <div class="card-body text-center ">
            <h5 class="card-title">{{ category.name }}</h5>
            <a href="{{ path('category_show', { slug: category.slug }) }}" class="btn btn-light btn-sm mt-2">
              Voir les cours
            </a>
          </div>
        </div>
      </div>
    {% else %}
      <p>Aucune catégorie disponible.</p>
    {% endfor %}
  </div>
{% endblock %}
