{% extends 'base.html.twig' %}

{% block title %}Liste des cours{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Tous les cours</h1>

    <div class="row">
        {% for course in courses %}
            <div class="col-md-4">
                <div class="card mb-3 shadow-sm h-100 course-card--{{course.category.slug}}">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ course.title }}</h5>

                        {# Affiche la cat√©gorie du cours #}
                        {% if course.category is defined and course.category %}
                            <span class="badge bg-secondary mb-2">
                                {{ course.category.name }}
                            </span>
                        {% endif %}

                        <p class="card-text flex-grow-1">
                            {{ course.description|slice(0, 100) ~ '...' }}
                        </p>

                        <a href="{{ path('course_show', { slug: course.slug }) }}" class="btn btn-primary mt-auto">
                            Voir le cours
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucun cours disponible pour le moment.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
